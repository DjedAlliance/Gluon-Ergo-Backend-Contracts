# Routes

# This file defines all application routes (Higher priority routes first)

# https://www.playframework.com/documentation/latest/ScalaRouting

GET /api/v1/fission/:ergAmount                         controllers.GluonWController.fissionRate(ergAmount: Long)
PUT /api/v1/fission/:ergAmount                         controllers.GluonWController.fission(ergAmount: Long)

PUT /api/v1/fusion                                     controllers.GluonWController.fusion()

GET /api/v1/transmute/toRsv/:goldAmount                controllers.GluonWController.transmuteSigGoldToSigGoldRsvRate(goldAmount: Long)
PUT /api/v1/transmute/toRsv/:goldAmount                controllers.GluonWController.transmuteSigGoldToSigGoldRsv(goldAmount: Long)
GET /api/v1/transmute/toGold/:rsvAmount                controllers.GluonWController.transmuteSigGoldRsvToSigGold(rsvAmount: Long)
PUT /api/v1/transmute/toGold/:rsvAmount                controllers.GluonWController.transmuteSigGoldRsvToSigGold(rsvAmount: Long)

GET /api/v1/mint/gold/:ergAmount                       controllers.GluonWController.mintSigGoldRate(ergAmount: Long)
PUT /api/v1/mint/gold/:ergAmount                       controllers.GluonWController.mintSigGold(ergAmount: Long)
GET /api/v1/mint/rsv/:ergAmount                        controllers.GluonWController.mintSigGoldRsvRate(ergAmount: Long)
PUT /api/v1/mint/rsv/:ergAmount                        controllers.GluonWController.mintSigGoldRsv(ergAmount: Long)

GET /api/v1/redeem/gold/:goldAmount                    controllers.GluonWController.redeemSigGoldRate(goldAmount: Long)
PUT /api/v1/redeem/gold/:goldAmount                    controllers.GluonWController.redeemSigGold(goldAmount: Long)
GET /api/v1/redeem/rsv/:rsvAmount                      controllers.GluonWController.redeemSigGoldRsvRate(rsvAmount: Long)
PUT /api/v1/redeem/rsv/:rsvAmount                      controllers.GluonWController.redeemSigGoldRsv(rsvAmount: Long)
